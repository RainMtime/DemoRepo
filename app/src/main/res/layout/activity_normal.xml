    android:orientation="vertical">

   <rainmtime.com.demorepo.test_code.NormalActivity.HeaderDetailLayout
       android:id="@+id/header_detail"
       android:layout_width="match_parent"
       android:background="@color/A1"
       android:layout_height="300dp">

   </rainmtime.com.demorepo.test_code.NormalActivity.HeaderDetailLayout>

   <Button
       android:id="@+id/btn"
