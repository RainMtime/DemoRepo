<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/svg_test1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_alpha" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_gradient"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drawabeLeft"
            android:textColor="@color/A1"
            android:textSize="18sp"
            android:drawableLeft="@drawable/selecotr_for_svg_chinese_colors"/>


        <rainmtime.com.demorepo.component.view.IconFontTextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/A1"
            android:text="@string/icon3"
            />

        <ImageView
            android:id="@+id/animate_svg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat = "@drawable/animate_svg"/>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>